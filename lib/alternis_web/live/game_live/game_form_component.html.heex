<div>
  <h2>Enter Secret Word</h2>

  <.form
    let={f}
    for={@changeset}
    id="game-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :secret %>
    <%= select f, :language, ["English": "english", "Russian": "russian"], "phx-throttle": "300" %>
    <%= text_input f, :secret, autofocus: true %>
    <%= error_tag f, :secret %>
  
    <div>
      <%= submit @button, phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
