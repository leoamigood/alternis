<h1>Running Games</h1>

<%= if @live_action in [:new] do %>
  <.modal>
    <.live_component
      module={AlternisWeb.GameLive.GameFormComponent}
      id={:new}
      player={@current_user}
      button={@button}
      action={@live_action}
      game_settings={@game_settings}
    />
  </.modal>
<% end %>

<.board games={@games}>
    <:header>
    <thead>
      <tr>
        <th>Language</th>
        <th>Secret</th>
      </tr>
    </thead>
    </:header>
</.board>

<span><%= live_redirect "New Game", to: ~p"/games/new" %></span>
